<Window x:Class="FurnitureManagement.Views.LocationN.ShowOfficers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowOfficers" Height="300" Width="300">
    <Grid Name="officer">
        <DataGrid Name="dg_Officer" AlternatingRowBackground="LightGray" CanUserAddRows="False" AutoGenerateColumns="False" >
            <DataGrid.Columns>
            <DataGridTextColumn Header="Id" Binding="{Binding Officer_id}"></DataGridTextColumn>
            <DataGridTextColumn Header="Occupant Name" Binding="{Binding Occupant_Name}"> </DataGridTextColumn>
            <DataGridTextColumn Header="Rank" Binding="{Binding Rank}"></DataGridTextColumn>
            <DataGridTextColumn Header="Army No" Binding="{Binding ArmyNo}"></DataGridTextColumn>
            <DataGridTextColumn Header="Date MarchIn" Binding="{Binding Date_MarchIn}"></DataGridTextColumn>
            <DataGridTextColumn Header="Location Name " Binding="{Binding Location_Name}"></DataGridTextColumn>
            <DataGridTextColumn Header="Designation" Binding="{Binding Designation}"></DataGridTextColumn>
            <DataGridTextColumn Header="Date March Out" Binding="{Binding Date_Marchout}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
