<Window x:Class="FurnitureManagement.Views.ItemViews.ShowItemHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowItemHistory" Height="auto" Width="200" ResizeMode="NoResize">
    <Grid>

        <DataGrid Name="dg_ShowItemHistory" CanUserAddRows="False" AutoGenerateColumns="False" >
            <DataGrid.Columns>

                <DataGridTextColumn Header="Location" Width="70" Binding="{Binding Location.Name}"/>
                <DataGridTextColumn Header="Assigned At" Width="150" Binding="{Binding Ceated_At}"/>
               
               
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
