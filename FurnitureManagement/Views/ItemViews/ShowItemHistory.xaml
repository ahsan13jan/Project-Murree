<Window x:Class="FurnitureManagement.Views.ItemViews.ShowItemHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ShowItemHistory"  Width="300" Height="400" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer Height="370" Margin="0,0,0,0"  >
            <Grid  >
                <DataGrid Name="dg_ShowItemHistory" CanUserAddRows="False" AutoGenerateColumns="False" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Id}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Location" Width="100" Binding="{Binding Location.Display}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Assigned At" Width="250" Binding="{Binding Ceated_At}" IsReadOnly="True"/>


                    </DataGrid.Columns>
                </DataGrid>
                          </Grid>
        </ScrollViewer>

    </Grid>
</Window>
